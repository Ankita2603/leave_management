<!-- app/views/leave_applications/edit.html.erb -->

<h2>Edit Leave Application</h2>

<%= form_with(model: @leave_application, local: true, class: "mt-4") do |f| %>
  <div class="mb-3">
    <%= f.label :start_date, class: "form-label" %>
    <%= f.date_field :start_date, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :end_date, class: "form-label" %>
    <%= f.date_field :end_date, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :reason, class: "form-label" %>
    <%= f.text_area :reason, class: "form-control", rows: 4, required: true %>
  </div>

  <%= f.submit "Update Leave", class: "btn btn-primary" %>
  <%= link_to 'Back', leave_applications_path, class: "btn btn-secondary ms-2" %>
<% end %>
